<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_with_arc_smallest_white_solid"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dhof_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textColor="#414141"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dhof_subTitle_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"

            android:paddingStart="15dp"
            android:paddingTop="9dp"
            android:text=""
            android:textColor="#414141"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9e9e9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/umeng_update_id_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="12dp"
                android:text="取消"
                android:textColor="#b6b6b6" />

            <View
                android:id="@+id/update_btn_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#eeeeee"/>

            <TextView
                android:textSize="16sp"
                android:id="@+id/dhof_confirm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@drawable/comm_text_click"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>